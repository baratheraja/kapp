<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    tools:context="com.scene.tags.sphere.MainActivity" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/key"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/key"
                android:background="@android:color/transparent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                />
            <ImageButton
                android:id="@+id/close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/close_ico"
                android:background="@android:color/transparent"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"


                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20px"
                android:text="LOGIN"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/login"
                android:layout_alignBottom="@+id/key"
                android:layout_toRightOf="@+id/key"
                android:background="@android:color/transparent"
                android:textColor="@color/white"
                android:layout_alignParentTop="true" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:id="@+id/hidden"
            >
            <ImageButton
                android:id="@+id/kid_ico"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/k_ico"
                android:background="@android:color/transparent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"


                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingLeft="20px"
                android:text="KID"
                android:id="@+id/kid"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/kid_ico"
                android:layout_toEndOf="@+id/kid_ico"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="1dp"
            android:alpha="0.75"
            android:background="@color/white"/>
    </LinearLayout>

    <in.org.kurukshetra.app16.CloudView
        android:layout_width="270dp"
        android:layout_height="300dp"
        android:id="@+id/cloudview"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:orientation="horizontal"
    android:paddingBottom="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/facebook55"
        android:scaleType="centerInside"
        android:layout_gravity="start"
        android:background="@android:color/transparent"
        android:id="@+id/fb_icon"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/twitter_icon"
        android:layout_toStartOf="@+id/twitter_icon"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:alpha="0.75"
        />

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/twitter1"
        android:scaleType="centerInside"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:id="@+id/twitter_icon"
        android:alpha="0.75"
        android:layout_marginRight="50dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/youtube_icon"
        android:layout_toStartOf="@+id/youtube_icon" />
    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/youtube17"
        android:scaleType="centerInside"
        android:layout_gravity="end"
        android:background="@android:color/transparent"
        android:id="@+id/youtube_icon"
        android:alpha="0.75"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/share"
            android:scaleType="centerInside"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:id="@+id/share_icon"
            android:alpha="0.75"
            android:layout_marginRight="51dp"
            android:layout_marginLeft="78dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/fb_icon"
            android:layout_toStartOf="@+id/fb_icon" />
    </RelativeLayout>

</LinearLayout>
</RelativeLayout>
