<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    tools:context="com.scene.tags.sphere.MainActivity" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10px"
        android:layout_marginBottom="0px"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/key"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:src="@drawable/key"
                android:background="@android:color/transparent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                />
            <ImageButton
                android:id="@+id/close"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:src="@drawable/close_ico"
                android:background="@android:color/transparent"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"


                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40px"
                android:paddingLeft="20px"
                android:text="LOGIN"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/login"
                android:layout_alignBottom="@+id/key"
                android:layout_toRightOf="@+id/key"
                android:background="@android:color/transparent"
                android:textColor="@color/white"
                android:paddingTop="3px"
                android:paddingBottom="3px"
                android:layout_alignParentTop="true" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/hidden"
            >
            <ImageButton
                android:id="@+id/kid_ico"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:src="@drawable/k_ico"
                android:background="@android:color/transparent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"


                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40px"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingLeft="20px"
                android:paddingTop="3px"
                android:paddingBottom="3px"
                android:text="KID"
                android:id="@+id/kid"
                android:background="@android:color/transparent"
                android:layout_alignParentTop="true"
                android:layout_alignBottom="@+id/kid_ico"
                android:layout_toRightOf="@+id/kid_ico"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="1dp"
            android:alpha="0.75"
            android:background="@color/white"/>
    </LinearLayout>

    <in.org.kurukshetra.app16.CloudView
        android:layout_width="270dp"
        android:layout_height="300dp"
        android:id="@+id/cloudview"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linearLayout2" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:id="@+id/linearLayout">
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" >
    </View>
    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/facebook55"
        android:scaleType="centerInside"
        android:background="@android:color/transparent"
        android:id="@+id/fb_icon"
        android:layout_gravity="center_horizontal|center_vertical"
        android:alpha="0.75"

        />
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" >
    </View>
    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/twitter1"
        android:scaleType="centerInside"
        android:background="@android:color/transparent"
        android:id="@+id/twitter_icon"
        android:alpha="0.75"
      />  <View
    android:layout_width="0dp"
    android:layout_height="1dp"
    android:layout_weight="1" >
</View>
    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/youtube17"
        android:scaleType="centerInside"
        android:background="@android:color/transparent"
        android:id="@+id/youtube_icon"
        android:alpha="0.75"/>
    <View
    android:layout_width="0dp"
    android:layout_height="1dp"
    android:layout_weight="1" >
</View>
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/share"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            android:id="@+id/share_icon"
            android:alpha="0.75"/>
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" >
    </View>
</LinearLayout>
</RelativeLayout>
